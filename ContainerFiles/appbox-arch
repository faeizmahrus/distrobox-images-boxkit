# Select image to build off of
FROM ghcr.io/ublue-os/arch-distrobox

# Metadata stuff
LABEL com.github.containers.toolbox="true" \
      usage="This image is meant to be used with the distrobox command" \
      summary="A distrobox image with Obsidian, Zotero, KeePassXC and LibreOffice preinstalled. Based on `ublue-toolbox` image." \
      maintainer="faeizmahrus@outlook.com"

# Run setup script
COPY ../scripts/appbox-arch.sh /
RUN chmod +x /appbox-arch.sh && /appbox-arch.sh
RUN rm /appbox-arch.sh