# Select image to build off of
FROM ghcr.io/ublue-os/arch-distrobox

# Metadata stuff
LABEL com.github.containers.toolbox="true" \
      usage="This image is meant to be used with the distrobox command" \
      summary="A image with the C/C++ toolchain, Rust toolchain and VSCode preinstalled." \
      maintainer="faeizmahrus@outlook.com"

# Run setup script
COPY ../scripts/devbox-arch.sh /
RUN chmod +x /devbox-arch.sh && /devbox-arch.sh
RUN rm /devbox-arch.sh